<UserControl x:Class="Lesson_2.TextBoxEmpty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lesson_2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="border" BorderThickness="0" x:FieldModifier="private">
            <TextBox x:Name="textBox" x:FieldModifier="private">
                <TextBox.ToolTip>
                    <ToolTip x:Name="toolTip" x:FieldModifier="private" Visibility="Hidden">
                        <TextBox x:Name="textBlockTooltip" x:FieldModifier="private" />
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>
        </Border>
    </Grid>
</UserControl>
